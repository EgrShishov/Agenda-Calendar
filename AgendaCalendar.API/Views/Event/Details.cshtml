@using AgendaCalendar.API.ViewModels.Event
@model EventDetailsViewModel

<div class="modal-content container">
    <div class="event-card-btn-group d-flex justify-content-end">
        <a class="btn-primary me-2" id="edit-event-btn" asp-controller="Event" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="fas fa-pen"></i>
        </a>
        <form method="post" asp-controller="Event" asp-action="Delete" asp-route-id="@Model.Id">
            <button type="submit" class="btn-primary me-2" id="delete-event-btn">
                <i class="fas fa-times"></i>
            </button>
        </form>
        <button class="btn-primary me-2" id="event-card-options">
            <i class="fas fa-ellipsis-v"></i>
        </button>
        <button class="btn-close me-2" id="event-card-close"></button>
    </div>
    <div class="col">
        <div class="d-flex justify-content-start">
            <div class="me-1">
                <i class="fas fa-square" style="color: #FFD43B;"></i>
            </div>
            <div class="me-1">
                <p>@Model.Title</p>
            </div>
        </div>
        <div class="d-flex justify-content-start">
            <p>Start Time: @Model.StartTime</p>
            <p>End Time: @Model.EndTime</p>
        </div>
        <div class="d-flex justify-content-start">
        </div>
        <div class="d-flex justify-content-start">
            <div class="me-1">
                <p>Description: @Model.Description</p>
            </div>
        </div>
        <div class="d-flex justify-content-start">
            <div class="me-1">
                <i class="far fa-bell"></i>
            </div>
            <div class="me-1">
                <p>Notification</p>
            </div>
        </div>
        <div class="d-flex justify-content-start">
            <div class="me-1">
                <i class="far fa-calendar"></i>
            </div>
            <div class="me-1">
                <p>Calendar @Model.Calendar</p>
            </div>
        </div>
    </div>
</div>