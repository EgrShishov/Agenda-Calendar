<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgendaCalendar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgendaCalendar.API.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="d-flex justify-content-between">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Agenda Calendar</a>
                    <div class="btn-group ml-1">
                         <a class="btn btn-primary" asp-controller="Calendar" asp-action="Create">
                            <i class="fas fa-plus"></i>
                        </a>
                        <a class="btn btn-primary" asp-controller="Event" asp-action="Delete" asp-route-id="1">
                            <i class="fas fa-minus"></i>
                        </a>
                        <a class="btn btn-primary" asp-controller="Event" asp-action="Edit" asp-route-id="2">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-primary" asp-controller="Calendar" asp-action="Export" asp-route-id="1">
                            <i class="fas fa-file-download"></i>
                        </a>
                        <form method="post" enctype="multipart/form-data" asp-controller="Calendar" asp-action="Import">
                            <div class="col">
                                <input type="file" name="file" class="form-control" />
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-file-upload"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <button class="btn px-1 py-0 open-btn">
                        <i class="fal fa-stream"></i>
                    </button>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container body-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @* <div class="container">
            &copy; 2024 - Agenda Calendar - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div> *@
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $('.open-btn').on('click', function () {
            $('.sidebar').removeClass('active');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>